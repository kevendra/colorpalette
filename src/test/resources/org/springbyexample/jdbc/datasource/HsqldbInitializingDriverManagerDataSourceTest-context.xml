<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dataSource"
          class="com.parakhcomputer.jdbc.datasource.HsqldbInitializingDriverManagerDataSource">
        <property name="sqlScriptProcessor">
            <bean class="com.parakhcomputer.jdbc.core.SqlScriptProcessor"
                  p:charset="UTF-8"
                  p:sqlScripts="classpath:/schema.sql" />
        </property>
    </bean>

</beans>
